@model Candidaturas.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
{
    <div id="login-div" class="container col-8 my-2 p-2">
        <img src="~/Content/img/marinha.png" alt="Logo Marinha" />
        <div class="form-group row">
                <div class="col">
                    <div class="form-group row">
                        <div class="col text-right">
                            @Html.LabelFor(model => model.user.Email, htmlAttributes: new { @class = "control-label col-form-label" })
                        </div>
                        <div class="col-6">
                            @Html.EditorFor(model => model.user.Email, new { htmlAttributes = new { @class = "form-control", @required = true, @placeholder = "Email" } })
                        </div>
                    </div>
                    <div class="form-group row my-2 ">
                        <div class="col text-right">
                            @Html.LabelFor(model => model.user.Password, "Palavra-Chave", htmlAttributes: new { @class = "control-label col-form-label " })
                        </div>
                        <div class="col-6">
                            @Html.EditorFor(model => model.passwordInput, new { htmlAttributes = new { @class = "form-control", @required = true, @type = "password", @placeholder = "Palavra-Chave" } })
                        </div>
                    </div>
                </div>
                <div class="col-3 text-left align-middle">
                    <input type="submit" name="name" value="Login" class="btn btn-primary p-3" />
                </div>
            </div>
            
        <div class="row">
            <span class="col text-danger text-center">
                @TempData["LogError"]
            </span>
            
               
        </div>
        <hr />
        <div class="my-3 form-group text-center">
            @Html.ActionLink("Criar Nova Conta", "NewUser", "User", null, new { @class = "register-link" }) |
            @Html.ActionLink("Recuperar Palavra-Passe", "RecoverPassword", "User", null, new { @class = "register-link" }) |
            <a href="~/candidaturaWS.asmx"><span class="fa fa-globe"></span></a>
        </div>

    </div>

}


