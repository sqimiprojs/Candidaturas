@model Candidaturas.Models.Documento

@{
    Layout = null;
}

@using (Html.BeginForm("Upload", "Documentos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-top: 20px;">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, "Descrição", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ficheiro, "Ficheiro PDF/JPEG", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="file" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <label id="errorLabel" class="label-danger" style="display:none">Por favor insira um ficheiro pdf ou jpeg válido.</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar Documento" class="btn btn-default" />
            </div>
        </div>

        <table class="table" style="margin-top: 30px;">
            <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var documento in @ViewBag.DocumentosEscolhidos)
            {
                <tr>
                    <td>@documento.Nome</td>
                    <td>@documento.Descricao</td>
                    <td>
                        <a class="glyphicon glyphicon-download" onclick="location.href='@Url.Action("DescarregarDocumento", "Documentos", new { id = (int)documento.ID})'"><span style="font-family:Arial,Helvetica,sans-serif;padding-left: 5px;">Download</span></a>
                    </td>
                    <td>
                        <a class="glyphicon glyphicon-remove-circle" onclick="location.href='@Url.Action("RemoverDocumento", "Documentos", new { id = (int)documento.ID})'"><span style="font-family:Arial,Helvetica,sans-serif;padding-left: 5px;">Remover</span></a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
@if(Session["ErrorDoc"] != null)
{
    <script>
    $(document).ready(function () {
        var error = @Session["ErrorDoc"];

        if (error == 1) {
            $("#errorLabel").show();
        }
        else {
            $("#errorLabel").hide();
        }
    });
    </script>
}

<style>
    .label-danger {
        width: 310px;
    }
</style>
