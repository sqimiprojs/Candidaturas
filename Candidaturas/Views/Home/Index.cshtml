
@{

    ViewBag.Title = "Home";

    if (Session["userID"]==null)
    {
        Response.Redirect("~/Login/Index");
    }

    if(Session["SelectedTab"] != null && Session["ErrorDoc"] != null)
    {
        if (Int32.Parse(Session["SelectedTab"].ToString()) != 4 && Int32.Parse(Session["ErrorDoc"].ToString()) == 1)
        {
            Session["ErrorDoc"] = 0;
        }
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Formulário de Candidatura</title>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.min.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#tabs").tabs();
        });

        $(document).ready(function () {

            var sessionTab = @Session["SelectedTab"];

            if (sessionTab == 1) {
                $("#tabs").tabs({ active: 0 });
            }
            else if (sessionTab == 2) {
                $("#tabs").tabs({ active: 1 });
            }
            else if (sessionTab == 3) {
                $("#tabs").tabs({ active: 2 });
            }
            else if (sessionTab == 4) {
                $("#tabs").tabs({ active: 3 });
            }
            else {
                $("#tabs").tabs({ active: 4 });
            }

        });
    </script>
    <style type="text/css">
        .toprightcorner {
            position: absolute;
            top: 0;
            right: 0;
        }

        .ui-tabs {
            background: transparent;
            border: none;
        }

            .ui-tabs .ui-widget-header {
                background: transparent;
                border: none;
                border-bottom: 1px solid #c0c0c0;
                -moz-border-radius: 0px;
                -webkit-border-radius: 0px;
                border-radius: 0px;
            }

            .ui-tabs .ui-tabs-nav .ui-state-default {
                background: transparent;
                border: none;
            }

            .ui-tabs .ui-tabs-nav .ui-state-active {
                background: transparent url('../../Content/uiTabsArrow.png') no-repeat bottom center;
                border: none;
            }

            .ui-tabs .ui-tabs-nav .ui-state-default a {
                color: #c0c0c0;
            }

            .ui-tabs .ui-tabs-nav .ui-state-active a {
                color: #459e00;
            }

        .ui-widget.ui-widget-content {
            border: none;
        }

        .ui-tabs .ui-tabs-nav .ui-state-active a {
            color: black;
            font-weight: bold;
        }

        .ui-tabs-anchor {
            font-size: 18px;
        }
    </style>
</head>
@if(Session["userID"] != null) { 
<body>
    <div class="header">
        <img src="~/Content/marinha.png" />
        <h1>Formulário de Candidatura</h1>
    </div>

    <div id="tabs" style="margin-top:40px;">
        <ul>
            <li><a href="#tabs-1">Dados Pessoais</a></li>
            <li><a href="#tabs-2">Inquérito</a></li>
            <li><a href="#tabs-3">Candidatura</a></li>
            <li><a href="#tabs-4">Documentos</a></li>
            <li><a href="#tabs-5">Declaração</a></li>
        </ul>
        <div id="tabs-1">
            @Html.Action("Index", "DadosPessoais")
        </div>
        <div id="tabs-2">
            @Html.Action("Index", "Inquerito")
        </div>
        <div id="tabs-3">
            @Html.Action("Index", "Candidaturas")
        </div>
        <div id="tabs-4">
            @Html.Action("Index", "Documentos")
        </div>
        <div id="tabs-5">
            @Html.Action("Index", "Declaracao")
        </div>
    </div>
</body>
}
</html>
