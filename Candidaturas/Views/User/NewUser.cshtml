@using Candidaturas.Models;

<script src='https://www.google.com/recaptcha/api.js'></script>
<script type="text/javascript" src="~/Scripts/documentValidation.js"></script>
@model Candidaturas.Models.UserDados
@{

    ViewBag.Title = "Criar Nova Conta";
}

@using (Html.BeginForm("NewUser", "User", FormMethod.Post, new { onsubmit = "validacaoFinal()" }))
{
    @Html.AntiForgeryToken()

    <div class="header">
        <img src="~/Content/img/marinha.png" alt="Logo Marinha" />
        <h1>Registo de Utilizador</h1>
    </div>

    <div class="form-horizontal my-5">
        <h4>Dados Pessoais</h4><hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.dadosPessoais.NomeColoquial, "Nome Completo", htmlAttributes: new { @class = "control-label required" })
                    <div class="col">
                        @Html.EditorFor(model => model.dadosPessoais.NomeColoquial, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.dadosPessoais.NomeColoquial, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.dadosPessoais.DataNascimento, "Data de Nascimento", htmlAttributes: new { @class = "control-label required" })
                    <div class="col">
                        @Html.EditorFor(model => model.dadosPessoais.DataNascimento, new { htmlAttributes = new { @class = "form-control", type = "date", @required = "required", @id = "DtNasc" } })
                        @Html.ValidationMessageFor(model => model.dadosPessoais.DataNascimento, "", new { @class = "text-danger", @id = "DtNascWarning" })
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.user.Email, "Email", htmlAttributes: new { @class = "control-label required" })
                    <div class="col-">
                        @Html.EditorFor(model => model.user.Email, new { htmlAttributes = new { @class = "form-control", @required = "required", @id = "Email" } })
                        @Html.ValidationMessageFor(model => model.user.Email, "", new { @class = "text-danger", @id = "EmailWarning" })
                    </div>
                </div>
            </div>
        </div>

        <h4>Documento de Identificação</h4><hr />
        <div class="row">
            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.dadosPessoais.TipoDocID, "Tipo de Documento", htmlAttributes: new { @class = "control-label required" })
                    <div class="col">
                        @Html.DropDownListFor(model => model.dadosPessoais.TipoDocID, ViewBag.TipoDocID as IEnumerable<SelectListItem>, "Escolha uma opção...", new { @class = "form-control", @required = "required", @id="TipoDoc" })
                        @Html.ValidationMessageFor(model => model.dadosPessoais.TipoDocID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.dadosPessoais.NDI, "Número do Documento", htmlAttributes: new { @class = "control-label required" })
                    <div class="col">
                        @Html.EditorFor(model => model.dadosPessoais.NDI, new { htmlAttributes = new { @class = "form-control", @required = "required", @id="NDI" } })
                        @Html.ValidationMessageFor(model => model.dadosPessoais.NDI, "", new { @class = "text-danger", @id = "NDIWarning" })
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.dadosPessoais.DocumentoValidade, "Validade do Documento", htmlAttributes: new { @class = "control-label required" })
                    <div class="col">
                        @Html.EditorFor(model => model.dadosPessoais.DocumentoValidade, new { htmlAttributes = new { @class = "form-control", type = "date", @required = "required", @id = "DocVali" } })
                        @Html.ValidationMessageFor(model => model.dadosPessoais.DocumentoValidade, "", new { @class = "text-danger", @id = "DocValiWarning" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dadosPessoais.Militar, "Militar?", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col">
                <label class="switch">
                    @Html.CheckBoxFor(model => model.dadosPessoais.Militar, new { htmlAttributes = new { @class = "form-control", @type = "checkbox" } })
                    <span class="slider"></span>
                </label>
                <span id="switchLabel"></span>
                @Html.ValidationMessageFor(model => model.dadosPessoais.Militar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div id="militar">
            <h4>Dados Militares</h4><hr />
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        @Html.LabelFor(model => model.dadosPessoais.Ramo, "Ramo", htmlAttributes: new { @class = "control-label required" })
                        <div class="col">
                            @Html.DropDownListFor(model => model.dadosPessoais.Ramo, ViewBag.Ramo as IEnumerable<SelectListItem>, "Escolha uma opção...", new { @class = "form-control", @required = "required", @onchange = "changePostos()" })
                            @Html.ValidationMessageFor(model => model.dadosPessoais.Ramo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.dadosPessoais.Classe, "Classe", htmlAttributes: new { @class = "control-label " })
                        <div class="col">
                            @Html.EditorFor(model => model.dadosPessoais.Classe, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.dadosPessoais.Classe, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        @Html.LabelFor(model => model.dadosPessoais.Categoria, "Categoria", htmlAttributes: new { @class = "control-label required" })
                        <div class="col">
                            @Html.DropDownListFor(model => model.dadosPessoais.Categoria, ViewBag.Categoria as IEnumerable<SelectListItem>, "Escolha uma opção...", new { @class = "form-control", @required = "required", @onchange = "changePostos()" })
                            @Html.ValidationMessageFor(model => model.dadosPessoais.Categoria, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.dadosPessoais.NIM, "Número de Identificação Militar", htmlAttributes: new { @class = "control-label required" })
                        <div class="col">
                            @Html.EditorFor(model => model.dadosPessoais.NIM, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.dadosPessoais.NIM, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        @Html.LabelFor(model => model.dadosPessoais.Posto, "Posto", htmlAttributes: new { @class = "control-label required disabled" })
                        <div class="col">
                            @Html.DropDownListFor(model => model.dadosPessoais.Posto, ViewBag.Posto as IEnumerable<SelectListItem>, "Escolha uma opção...", new { @class = "form-control", @required = "required", disabled = "disabled" })
                            @Html.ValidationMessageFor(model => model.dadosPessoais.Posto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="g-recaptcha" data-sitekey="6LfpKGgUAAAAAMuDiV5SegpE0PS9mYnptSW2zUN_"></div>
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>

        <div class="form-group">
            <input type="submit" value="Criar" class="btn btn-primary" />
            @Html.ActionLink("Voltar", "Index", "Login", null, new { @class = "btn btn-outline-primary" })
        </div>

    </div>
}
<script>
    window.onload = toogleMilitar(false);
    $('#dadosPessoais_Militar').click(function () {
        changeLabel();
    });

    //muda a label do switch
    function changeLabel() {
        if (!$("#dadosPessoais_Militar").is(':checked')) {
            $("#switchLabel").text("Não");
            toogleMilitar(false);
        }
        else {
            $("#switchLabel").text("Sim");
            toogleMilitar(true);
        }
    }

    function toogleMilitar(bool) {
        if (bool) {
            $("#militar").show();
        } else {
            $("#militar").hide();
        }
        var $nim = $('#dadosPessoais_NIM');
        $nim.prop('required', bool);
        var $ramo = $('#dadosPessoais_Ramo');
        $ramo.prop('required', bool);
        var $categoria = $('#dadosPessoais_Categoria');
        $categoria.prop('required', bool);
        var $posto = $('#dadosPessoais_Posto');
        $posto.prop('required', bool);
    }

    //altera os postos consoante o ramo e categoria escolhido
    function changePostos() {
        var ramoEscolhido = $('#dadosPessoais_Ramo').val();
        var categoriaEscolhida = $('#dadosPessoais_Categoria').val();
        if (categoriaEscolhida == "" || ramoEscolhido == "" || ramoEscolhido == "MIL") {
            var $posto = $('#dadosPessoais_Posto');
            $posto.empty();
            $posto.append('<option value="">Escolha uma opção...</option>');
            $posto.prop('disabled', true);
        }
        else {
            $.ajax({
            url: '@Url.Action("UpdatePostos", "User")',
            data: {
                ramo: ramoEscolhido,
                categoria: categoriaEscolhida
            },
            type: "POST",
            success: function (postos) {
                var $select = $('#dadosPessoais_Posto');
                $select.empty();
                $select.append('<option value="">Escolha uma opção...</option>');
                $select.prop('disabled', false);
                $.each(postos, function (i, posto) {
                    $('<option>', {
                        value: posto.ID
                    }).html(posto.Name).appendTo($select);
                });
            },
            error: function (e) { console.log(e); }
        })
        }
        
    }

    function resetPostos() {
        var $posto = $('#dadosPessoais_Posto');
        $posto.empty();
        $posto.append('<option value="">Escolha uma opção...</option>');
        $posto.prop('disabled', true);
    }
</script>
<style>
    #switchLabel {
        position: absolute;
        margin-left: 10px;
        margin-top: 7px;
        font-weight: bold;
    }
</style>
